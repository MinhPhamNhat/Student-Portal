        <script src="https://res.cloudinary.com/dxfq3iotg/raw/upload/v1569006273/BBBootstrap/choices.min.js?version=7.0.0"></script>
</head>

<body>
    <div class="container py-5 department-insert-container">

        <div class="row mb-4">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4">Thêm Phòng\Ban</h1>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="bg-white rounded-lg shadow-sm p-5">
                    <!-- Credit card form tabs -->
                    <ul role="tablist" class="nav bg-light nav-pills rounded-pill nav-fill mb-3">
                        <li class="nav-item">
                            <a data-toggle="pill" href="#nav-tab-card" class="nav-link active rounded-pill">
                                <i class="fa fa-info" aria-hidden="true"></i></i> Thông tin
                            </a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="pill" href="#nav-tab-paypal" class="nav-link rounded-pill">
                                <i class="fa fa-picture-o" aria-hidden="true"></i></i> Ảnh đại diện
                            </a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="pill" href="#nav-tab-bank" class="nav-link rounded-pill">
                                <i class="fa fa-key" aria-hidden="true"></i></i> Đặt quyền
                            </a>
                        </li>
                    </ul>
                    <!-- End -->


                    <!-- Credit card form content -->
                    <div class="tab-content">

                        <!-- credit card info-->
                        <div id="nav-tab-card" class="tab-pane fade show active">
                            <p class="alert alert-success">Some text success or error</p>
                            <div class="form-group">
                                <label for="name">Tên Phòng / Ban</label>
                                <input id="department-name" type="text" name="name" placeholder="Đặt tên cho Phòng/Ban của bạn" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="username">Tài khoản</label>
                                <div class="input-group">
                                    <input id="department-username" type="text" name="username" placeholder="Tên tài khoản phòng ban" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password">Mật khẩu</label>
                                <div class="input-group">
                                    <input id="department-password" type="password" name="password" placeholder="Mật khẩu phòng ban" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password-confirm">Nhập lại mật khẩu</label>
                                <div class="input-group">
                                    <input id="department-password-confirm" type="password" name="password-confirm" placeholder="Nhập lại mật khẩu" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="deparment-id">Mã phòng ban</label>
                                <div class="input-group">
                                    <input id="department-id" type="text" name="deparment-id" placeholder="Đặt mã cho phòng ban của bạn" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <!-- End -->

                        <!-- <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label><span class="hidden-xs">Expiration</span></label>
                                    <div class="input-group">
                                        <input type="number" placeholder="MM" name="" class="form-control" required>
                                        <input type="number" placeholder="YY" name="" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group mb-4">
                                    <label data-toggle="tooltip" title="Three-digits code on the back of your card">CVV
                                              <i class="fa fa-question-circle"></i>
                                          </label>
                                    <input type="text" required class="form-control">
                                </div>
                            </div>



                        </div> -->
                        <!-- Paypal info -->
                        <div id="nav-tab-paypal" class="tab-pane fade">
                            <!--image file upoad sample-->
                            <div class="box">
                                <!-- fileuploader view component -->
                                <div class="margin-bottom-20">
                                    <img class="department-thumbnail box-center margin-top-20" alt="No image" src="/images/no-image.png">
                                </div>
                                <p>
                                    <button class="remove btn btn-outline-secondary " name="delete"><i class="fa fa-trash" aria-hidden="true"></i> Remove</button>
                                </p>
                                <!-- ./fileuploader view component -->
                                <div class="row">
                                    <div class="col-sm-10">
                                        <span class="control-fileupload">
                                    <label for="file1" class="text-left">Chọn ảnh đại diện cho phòng ban</label>
                                    <input id="department-thumbnail" type="file" class="department-thumbnail-upload">
                                  </span>
                                    </div>
                                </div>
                            </div>
                            <!--./image file upoad sample-->
                        </div>
                        <!-- End -->

                        <!-- bank transfer info -->
                        <div id="nav-tab-bank" class="tab-pane fade tab3">

                            <div class="row d-flex justify-content-center mt-100">
                                <div class="col-md-9"> <select name="permission" id="choices-multiple-remove-button" placeholder="Vui lòng chọn các phòng ban" multiple>
                                        <option value="HTML">HTML</option>
                                        <option value="Jquery">Jquery</option>
                                        <option value="CSS">CSS</option>
                                        <option value="Bootstrap 3">Bootstrap 3</option>
                                        <option value="Bootstrap 4">Bootstrap 4</option>
                                        <option value="Java">Java</option>
                                        <option value="Javascript">Javascript</option>
                                        <option value="Angular">Angular</option>
                                        <option value="Python">Python</option>
                                        <option value="Hybris">Hybris</option>
                                        <option value="SQL">SQL</option>
                                        <option value="NOSQL">NOSQL</option>
                                        <option value="NodeJS">NodeJS</option>
                                    </select>
                                </div>
                                <div col-md-3>
                                    <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Đã gồm quyền đăng bài của chính bạn">
                                          </i>

                                </div>
                            </div>
                            <button class="btn btn-outline-success submit">Tạo</button>
                            <!-- End -->
                        </div>
                        <!-- End -->

                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll to Top End -->
</body>

