<body>
    <div class="_user-id" data-id="<%= user._id %>"> </div>
    <!-- header area start -->
    <header>
        <div class="header-top sticky bg-white d-none d-lg-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <!-- header top navigation start -->
                        <div class="header-top-navigation">
                            <nav>
                                <ul>
                                    <li><a href="/department">Phòng ban</a>
                                    </li>
                                    <li><a href="/notification">Tất cả thông báo</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <!-- header top navigation start -->
                    </div>

                    <div class="col-md-2 ">
                        <!-- brand logo start -->
                        <div class="brand-logo text-center ">
                            <a href="/">
                                <img id="tdtu_logo" src="/images/tdtu.png" alt="brand logo ">
                            </a>
                        </div>
                        <!-- brand logo end -->
                    </div>

                    <div class="col-md-5 ">
                        <div class="header-top-right d-flex align-items-center justify-content-end ">

                            <!-- profile picture start -->
                            <div class="profile-setting-box ">
                                <div class="profile-thumb-small ">
                                    <a href="javascript:void(0) " class="profile-triger ">
                                        <figure>
                                            <img src="<%= user.avatar %>" alt="profile picture">
                                        </figure>
                                    </a>
                                    <div class="profile-dropdown ">
                                        <div class="profile-head ">
                                            <h5 class="name ">
                                                <a href="/profile/<%= user._id %>">
                                                    <%= user.name %>
                                                </a>
                                            </h5>
                                            <a class="mail " >
                                                <%= user.email %>
                                            </a>
                                        </div>

                                        <div class="profile-body ">
                                            <ul>
                                                <li><a href="/profile/<%=user._id%>"><i class="fa fa-user-o"></i></i>Hồ sơ</a></li>
                                                <%if (!user.role.student){%>
                                                    <li><a href="/profile/change-password"><i class="fa fa-key" aria-hidden="true"></i>Đổi mật khẩu</a></li>
                                                <%}%>
                                            </ul>
                                            <ul>
                                                <li><a href="/signout"><i class="fa fa-sign-out" aria-hidden="true"></i></i>Đăng xuất</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- profile picture end -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="noti-inform"><span><strong class="department">Phòng đại học</strong> vừa đăng một thông báo mới tại <strong class="category">Phòng đại học</strong></span></div>
        </div>
    </header>
    <!-- header area end -->
    <!-- header area start -->
    <header>
        <div class="mobile-header-wrapper sticky d-block d-lg-none ">
            <div class="mobile-header position-relative ">
                <div class="mobile-logo ">
                    <a href="/">
                        <img src="/images/tdtu.png " alt="logo ">
                    </a>
                </div>
                <div class="mobile-menu w-100 ">
                    <ul>
                        <li><a href="/department">Phòng ban</a>
                        </li>
                        <li><a href="/notification">Tất cả thông báo</a>
                        </li>
                    </ul>
                </div>
                <div class="mobile-header-profile ">
                    <!-- profile picture end -->
                    <div class="profile-thumb profile-setting-box ">
                        <a href="javascript:void(0) " class="profile-triger ">
                            <figure class="profile-thumb-middle ">
                                <img src="<%= user.avatar %>" alt="profile picture ">
                            </figure>
                        </a>
                        <div class="profile-dropdown text-left ">
                            <div class="profile-head ">
                                <h5 class="name ">
                                    <a href="/profile/<%=user._id%>">
                                        <%= user.name%>
                                    </a>
                                </h5>
                                <a class="mail" href="">
                                    <%= user.email %>
                                </a>
                            </div>

                            <div class="profile-body ">
                                <ul>
                                    <li><a href="/profile/<%= user._id %>"><i class="fa fa-user-o"></i></i>Hồ sơ</a></li>
                                    <%if (!user.role.student){%>
                                        <li><a href="/profile/change-password"><i class="fa fa-key" aria-hidden="true"></i>Đổi mật khẩu</a></li>
                                    <%}%>
                                </ul>
                                <ul>
                                    <li><a href="/signout"><i class="fa fa-sign-out" aria-hidden="true"></i></i>Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- profile picture end -->
                </div>
            </div>
            <div class="noti-inform"><span><strong class="department">Phòng đại học</strong> vừa đăng một thông báo mới tại <strong class="category">Phòng đại học</strong></span></div>
         </div>
    </header>
    <!-- header area end -->
</body>