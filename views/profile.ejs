<!DOCTYPE html>
<html>
<%- include('./partition/header'); -%>
<%- include('./partition/navbar', {user: user}); -%>

<body>
        <main>

            <div class="main-wrapper pt-80">
                
            <div class="profile-menu-area bg-white">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-3 col-md-3">
                                <div class="profile-picture-box">
                                    <figure class="profile-picture">
                                        <a href="/profile/<%= userProfile._id %>">
                                            <img src="<%= userProfile.avatar %>" class="profile-picture" alt="profile picture">
                                        </a>
                                    </figure>
                                </div>
                                <div class="profile-name">
                                    <strong>
                                        <%= userProfile.name %>
                                    </strong>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 offset-lg-1">
                                <div class="profile-menu-wrapper">
                                    <div class="main-menu-inner header-top-navigation">
                                        <nav>
                                            <ul class="main-menu">
                                                <li class="active"><a href="https://demo.hasthemes.com/adda-preview/adda/profile.html#">timeline</a></li>
                                                <li><a href="https://demo.hasthemes.com/adda-preview/adda/about.html">about</a></li>
                                                <li><a href="https://demo.hasthemes.com/adda-preview/adda/photos.html">photos</a></li>
                                                <!-- <li class="d-inline-block d-md-none"><a href="profile.html">edit profile</a></li> -->
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3 d-none d-md-block">
                            <% if(isCurrentUser){ %>

                                    <div class="profile-edit-panel">
                                        <button class="edit-btn">edit profile</button>
                                    </div>
                            <%}%>
                        </div>
                            
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row ">

                        <div class="col-lg-3 order-2 order-lg-1">
                            <%- include('./partition/left-widget'); -%>
                        </div>
                        <div class="col-lg-6 order-1 order-lg-2">
                            <!-- share box start -->

                            
                            <%- isCurrentUser?include('./partition/share'):'' -%>
                                <!-- share box end -->
                                <%- include('./partition/body', {data: data}); -%>
                        </div>
                        <div class="col-lg-3 order-3">
                            <%- include('./partition/right-widget'); -%>
                        </div>
                    </div>
                </div>
            </div>

        </main>

        <!-- Scroll to top start -->
        <div class="scroll-top not-visible">
            <i class="bi bi-finger-index"></i>
        </div>
        <!-- Scroll to Top End -->
        <%- include('./partition/footer') -%>
    </body>
</html>